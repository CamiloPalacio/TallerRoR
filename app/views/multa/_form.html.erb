<%= form_with(model: multum) do |form| %>
  <% if multum.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(multum.errors.count, "error") %> prohibited this multum from being saved:</h2>

      <ul>
        <% multum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w-50 m-auto">
    <%= form.label :valor, :class => 'form-label' %>
    <%= form.number_field :valor, value:0 , min: 0, step: :any, :required => true, :class => 'form-control' %>
  </div>

  <div class="w-50 m-auto">
    <%= form.label :fecha, :class => 'form-label' %>
    <%= form.date_field :fecha, :required => true, :class => 'form-control'  %>
  </div>

  <div class="w-50 m-auto">
    <%= form.label :estado, :class => 'form-label' %>
    <%= form.number_field :estado, value:0 , min: 0, max:1, :class => 'form-control'  %>
  </div>

  <div class="w-50 m-auto">
    <%= form.label :Prestamo_id, :class => 'form-label' %>
    <%#<%= form.select :Prestamo_id, options_for_select(Prestamo.all.map{|s|[s.id.to_s + ': '+s.fecha.to_s+' | '+s.estado.to_s]}) %>
    <%= form.select(:Prestamo_id, options_for_select(Prestamo.all.map{|s|[s.id.to_s + ': '+s.fecha.to_s+' | '+s.estado.to_s]}), { include_blank: false }, { class: 'form-select' }) %>
    </div>

  <div class="mt-2 d-flex flex-row justify-content-evenly">
    <%= form.submit 'Crear', :class => 'btn btn-primary'%>
    <%= link_to "Regresar a Multa", multa_path , :class => 'btn btn-primary'%>
  </div>
<% end %>
