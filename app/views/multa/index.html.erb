<div class="container bg-white shadow-lg p-3 mb-5 bg-body rounded">
  <h1 class="text-center">Multas</h1>
  <table class="table table-striped" >
    <thead>
      <tr>
        <th scope="col">Valor</th>
        <th scope="col">Fecha</th>
        <th scope="col">Estado</th>
        <th scope="col">Prestamo</th>
        <th scope="col">Accion</th>
      </tr>
    </thead>
    <tbody>
      <% @multa.each do |multum| %>
      <tr>
        <td><%= multum.valor %></td>
        <td><%= multum.fecha %></td>
        <td><%= multum.estado %></td>
        <td><%= "Estado: "+multum.Prestamo.estado.to_s+ " | " + multum.Prestamo.fecha.to_s %></td>
        
        <td>
          <button class="btn btn-primary">
            <a style="text-decoration:none; color: white;" href=<%="multa/"+multum.id.to_s%>>
              Ver
            </a>
          </button>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center ">
    <button class="btn btn-primary">
      <a style="text-decoration:none; color: white;" href=<%=new_multum_path%>>
        Nueva multa
      </a>
    </button>
  </div>
</div>













