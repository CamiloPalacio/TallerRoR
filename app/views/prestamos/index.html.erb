<div class="container bg-white shadow-lg p-3 mb-5 bg-body rounded">
  <h1 class="text-center">Prestamos</h1>
  <table class="table table-striped" >
    <thead>
      <tr>
        <th scope="col">Fecha</th>
        <th scope="col">Estado</th>
        <th scope="col">Usuario</th>
        <th scope="col">Accion</th>
      </tr>
    </thead>
    <tbody>
        <% @prestamos.each do |prestamo| %>
      <tr>
        <td><%= prestamo.fecha%></td>
        <td><%= prestamo.estado %></td>
        <td><%= prestamo.Usuario.nombres%></td>
        <td>
          <%= link_to "Ver", prestamo , :class => 'btn btn-primary'%>
          </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center ">
    <%= link_to "Nuevo Prestamo", new_prestamo_path , :class => 'btn btn-primary'%>
  </div>
</div>






















