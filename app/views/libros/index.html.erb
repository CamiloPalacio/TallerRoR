<div class="container bg-white shadow-lg p-3 mb-5 bg-body rounded">
  <h1 class="text-center">Libros</h1>
  <table class="table table-striped" >
      <thead>
      <tr>
        <th scope="col">Título</th>
        <th scope="col">Autor</th>
        <th scope="col">Año</th>
        <th scope="col">Accion</th>
      </tr>
    </thead>
    <tbody>
      <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.titulo %></td>
        <td><%= libro.year %></td>
        <td><%= libro.autor %></td>
        <td>
          <%= link_to "Ver", libro , :class => 'btn btn-primary'%>
        </td>
      </tr>
        <% end %>
    </tbody>
  </table>
    <div class="d-flex justify-content-center ">
        <%= link_to "Nuevo libro", new_libro_path , :class => 'btn btn-primary'%>
    </div>
  </div>


